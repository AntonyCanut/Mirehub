{
  "name": "mirehub",
  "version": "0.1.0",
  "description": "Mirehub - Environnement de developpement macOS avec Claude AI",
  "main": "dist/main/index.js",
  "author": "Antony Kervazo Canut",
  "license": "SEE LICENSE IN LICENSE",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:app": "npm run build && electron-builder --mac",
    "build:local": "npm run build && electron-builder --mac --publish never",
    "lint": "eslint src/ --ext .ts,.tsx",
    "lint:fix": "eslint src/ --ext .ts,.tsx --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,css,json}'",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "better-sqlite3": "^12.6.2",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.8.3",
    "monaco-editor": "^0.55.1",
    "mongodb": "^7.1.0",
    "mssql": "^12.2.0",
    "mysql2": "^3.17.4",
    "node-pty": "^1.0.0",
    "pg": "^8.18.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/mssql": "^9.1.9",
    "@types/node": "^22.15.0",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.30.0",
    "@typescript-eslint/parser": "^8.30.0",
    "@vitejs/plugin-react": "^4.4.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/addon-search": "^0.16.0",
    "@xterm/addon-unicode11": "^0.9.0",
    "@xterm/addon-web-links": "^0.12.0",
    "@xterm/addon-webgl": "^0.19.0",
    "@xterm/xterm": "^6.0.0",
    "concurrently": "^9.1.0",
    "electron": "^33.0.0",
    "electron-builder": "^26.0.0",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.0",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "prettier": "^3.5.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tsx": "^4.19.0",
    "typescript": "^5.8.0",
    "vite": "^6.3.0",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.0",
    "vitest": "^3.1.0",
    "zustand": "^5.0.0"
  },
  "build": {
    "appId": "com.akc.mirehub",
    "productName": "Mirehub",
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "build/icon.icns",
      "target": [
        "zip"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "node_modules/node-pty/**",
      "node_modules/better-sqlite3/**"
    ],
    "generateBlockmap": false,
    "npmRebuild": true,
    "publish": {
      "provider": "github",
      "owner": "AntonyCanut",
      "repo": "Mirehub"
    }
  }
}
